{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": [
        "types/**/*.ts",
        "scripts/**/*.ts",
        "lib/**/*.ts",
        "models/**/*.ts"
    ]
}
